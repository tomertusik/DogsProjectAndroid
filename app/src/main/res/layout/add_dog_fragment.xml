<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/TRY3"
        android:id="@+id/background"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Khaki"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/exitIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/exit_icon" />


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Add New Dog"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/DarkBlue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/NameEdit"
                android:background="@color/White"
                android:layout_width="200dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:hint="Enter Name"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toRightOf="@id/Name"
                app:layout_constraintRight_toLeftOf="@id/errorName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/errorName"
                android:src="@drawable/error_icon"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Age"
                app:layout_constraintTop_toBottomOf="@id/Name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/ageEdit"
                android:background="@color/White"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:hint="Enter Age"
                android:gravity="center"
                android:inputType="phone"
                app:layout_constraintTop_toBottomOf="@id/Name"
                app:layout_constraintLeft_toRightOf="@id/Name"
                app:layout_constraintRight_toLeftOf="@id/errorName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/errorAge"
                android:src="@drawable/error_icon"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Name"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="City"
                app:layout_constraintTop_toBottomOf="@id/age"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/cityEdit"
                android:background="@color/White"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:hint="Enter City"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/age"
                app:layout_constraintLeft_toRightOf="@id/Name"
                app:layout_constraintRight_toLeftOf="@id/errorName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/errorCity"
                android:src="@drawable/error_icon"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/age"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Phone"
                app:layout_constraintTop_toBottomOf="@id/city"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/phoneEdit"
                android:background="@color/White"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Enter Phone"
                app:layout_constraintTop_toBottomOf="@id/city"
                app:layout_constraintLeft_toRightOf="@id/Name"
                app:layout_constraintRight_toLeftOf="@id/errorName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:inputType="phone"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/errorPhone"
                android:src="@drawable/error_icon"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/city"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Take a pictue"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/DarkBlue"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/Image"
                android:src="@drawable/camera"
                android:layout_width="80dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/pic"
                app:layout_constraintTop_toBottomOf="@id/phone"
                android:layout_marginRight="10dp"
                android:layout_height="80dp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/errorPic"
                android:src="@drawable/error_icon"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/next"
                android:background="@drawable/circle"
                android:layout_width="150dp"
                android:layout_marginTop="22dp"
                android:text="Continue"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="40dp" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</layout>